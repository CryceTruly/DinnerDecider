<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         >
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/drinks"
            android:src="@drawable/drinks"/>
    <TextView
            android:text="Barzil DC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drinks"
            android:layout_centerHorizontal="true"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:id="@+id/whereto"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_centerVertical="true"
                  android:weightSum="5"
                  android:orientation="horizontal"

                  android:layout_height="wrap_content">

        <EditText android:layout_weight="4"
                  android:layout_marginEnd="15dp"
                  android:layout_marginStart="15dp"
                  style="@style/ThemeOverlay.AppCompat.Dark"
                  android:hint="Add a restuarant"
                android:layout_width="match_parent"
                  android:id="@+id/restinput"
                  android:layout_height="wrap_content"/>
        <ImageView
                android:layout_width="wrap_content"
                   android:src="@drawable/ic_check"
                android:layout_weight="1"
                android:id="@+id/addclick"
                   android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
            android:layout_width="match_parent"
            android:text="Decide"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:layout_marginEnd="-5dp"
            android:id="@+id/decide"
            android:layout_marginLeft="0dp"
            android:layout_height="wrap_content" android:layout_marginBottom="-7dp" android:layout_marginRight="-5dp"/>


</RelativeLayout>
